{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "cli:debug": "pnpm --filter @ldsg/cli debug",
    "build": "pnpm run --recursive build",
    "dev": "nodemon --exec \"pnpm build && pnpm --filter examples dev\"",
    "test": "jest",
    "bt": "pnpm build-test",
    "build-test": "pnpm build && pnpm test"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.24.7",
    "@changesets/cli": "^2.28.1",
    "@dotenvx/dotenvx": "^1.39.1",
    "@types/jest": "^29.5.2",
    "jest": "^29.5.0",
    "nodemon": "^3.1.4",
    "ts-jest": "^29.1.5"
  },
  "nodemonConfig": {
    "ext": "ts",
    "ignore": [
      "**/__tests__/**",
      "**/dist/**"
    ],
    "delay": 2500
  }
}
